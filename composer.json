{
    "name": "php/todo-app",
    "description": "My php app",
    "require": {
        "php": ">=7.4",
        "illuminate/database": "^10.0", 
        "monolog/monolog": "^2.0", 
        "respect/validation": "^2.4",
        "vlucas/phpdotenv": "^5.6",
        "phpmailer/phpmailer": "^6.9" 
    },

    "autoload": {
        "psr-4": {
            "models\\": "models/",
            "controllers\\": "controllers/",
            "core\\": "core/",
            "utils\\" : "utils/",
            "config\\" : "config/",
            "services\\": "services/",
            "migrations \\": "migrations/",
            "interfaces\\": "interfaces/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6"
    }
}
